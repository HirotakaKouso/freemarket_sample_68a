<h2>会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<%# ニックネーム %>
  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname %>
  </div>
<%# メールアドレス %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

<%# パスワード %>
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上の英数字)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

<%# パスワード確認 %>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

<%# 姓 %>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>
<%# 名 %>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>
<%# せい %>
  <div class="field">
    <%= f.label :last_name_kana %><br />
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
  </div>
<%# めい %>
  <div class="field">
    <%= f.label :first_name_kana %><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>
<%# 電話番号 %>
  <div class="field">
    <%= f.label :tel %><br />
    <%= f.text_field :tel, autofocus: true, autocomplete: "tel" %>
  </div>
<%# 郵便番号 %>
  <div class="field">
    <%= f.label :zip_code %><br />
    <%= f.text_field :zip_code, autofocus: true, autocomplete: "zip_code" %>
  </div>
<%# 都道府県 %>
  <div class="field">
    <%= f.label :prefecture %><br />
    <%= f.collection_select :prefecture_id, Prefecture.group(:prefecture).order(id: :asc), :id, :prefecture, {prompt: ""}%>  
  </div>

<%# 住所 %>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>
<%# 年 %>
<div class="field">
    <%= f.label :birth_year %><br />
    <%= f.text_field :birth_year, autofocus: true, autocomplete: "birth_year" %>
</div>

<%# 月 %>
<div class="field">
    <%= f.label :birth_month %><br />
    <%= f.text_field :birth_month, autofocus: true, autocomplete: "birth_month" %>
</div>
<%# 日 %>
<div class="field">
    <%= f.label :birth_day %><br />
    <%= f.text_field :birth_day, autofocus: true, autocomplete: "birth_day" %>
</div>
<%# 登録ボタン %>
  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
