%h2 会員登録
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :nickname
    %br/
    = f.text_field :nickname
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} 文字以上の英数字)
    %br/
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .field
    = f.label :last_name
    %br/
    = f.text_field :last_name, autofocus: true, autocomplete: "last_name"
  .field
    = f.label :first_name
    %br/
    = f.text_field :first_name, autofocus: true, autocomplete: "first_name"
  .field
    = f.label :last_name_kana
    %br/
    = f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana"
  .field
    = f.label :first_name_kana
    %br/
    = f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana"
  .field
    = f.label :tel
    %br/
    = f.text_field :tel, autofocus: true, autocomplete: "tel"
  .field
    = f.label :zip_code
    %br/
    = f.text_field :zip_code, autofocus: true, autocomplete: "zip_code"
  .field
    = f.label :prefecture
    %br/
    = f.collection_select :prefecture_id, Prefecture.group(:prefecture).order(id: :asc), :id, :prefecture, {prompt: ""}
  .field
    = f.label :address
    %br/
    = f.text_field :address, autofocus: true, autocomplete: "address"
  生年月日
  %br/
  .field
    = f.label :birth_year
    %br/
    = f.text_field :birth_year, autofocus: true, autocomplete: "birth_year"
  .field
    = f.label :birth_month
    %br/
    = f.text_field :birth_month, autofocus: true, autocomplete: "birth_month"
  .field
    = f.label :birth_day
    %br/
    = f.text_field :birth_day, autofocus: true, autocomplete: "birth_day"
  .actions
    = f.submit "登録"
= render "devise/shared/links"
